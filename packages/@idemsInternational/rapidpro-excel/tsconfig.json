{
  "compilerOptions": {
    "target": "es2015",
    "moduleResolution": "node",
    "lib": ["ESNext"],
    "module": "commonjs",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "build",
    // Global type definitions.
    "typeRoots": ["./node_modules/@types", "./types/**"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["src/**/*.spec.ts"]
}
